@page "/"

<PageTitle>Game Reviews</PageTitle>

<div class="container">
    <div class="text-center mb-5">
        <h1 class="display-4 fw-bold text-primary">
            <i class="bi bi-controller me-3"></i>
            Game Reviews Fetcher
        </h1>
        <p class="lead text-muted">Extract and export game reviews from various stores</p>
    </div>
    
    <StoreSelector @bind-SelectedStore="SelectedStore" />

    @switch (SelectedStore)
    {
        case Store.Steam:
            <SteamPage></SteamPage>
            break;
        default:
            <p>Please select a store</p>
            break;
    }
</div>

@code {
    private Store? SelectedStore { get; set; } = null;
}